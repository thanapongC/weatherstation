  function light(f) {
          
          var light;
          
          if (f >= 90) {
            light = "ความชื้นสัมพันธ์ : สูงมาก";
           } 
           else if (f > 60){
            light = "ความชื้นสัมพันธ์ : สูง";
           }  
           else if (f == 60){
            light = "ความชื้นสัมพันธ์ : พอดี";
           }          
           else if(f < 60){
            light = "ความชื้นสัมพันธ์ : ต่ำ";
           }   
        document.getElementById("light").innerHTML = light;

}
  function temp(a) {
          
          var temp;
          
          if (a >= 40) {
            temp = "อุณหภูมิ : ร้อนจัด";
