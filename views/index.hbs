           }          
           else if (a >= 23){
            temp = "อุณหภูมิ : ค่อนข้างเย็น";
           }       
           else if (a >= 18){
            temp = "อุณหภูมิ : เย็น";
           }    
           else if (a >= 16){
            temp = "อุณหภูมิ : ค่อนข้างหนาว";
           }   
           else if(a >= 8){
            temp = "อุณหภูมิ : หนาว";
           }   
        document.getElementById("temp").innerHTML = temp;

}
